acl corpnets { 
    {% if allowed_IPs -%}
        {% for IP_add in allowed_IPs -%}
            {{IP_add}};
        {% endfor -%}
    {% endif %} 
};



options {
    allow-query { corpnets; };

	directory "/var/cache/bind";

    {% if forwarders_IPs %}
    forwarders {
        {% for IP in forwarders_IPs -%}
            {{IP}};
        {% endfor -%}
	}
    {% endif %};

	dnssec-validation no;

	auth-nxdomain no;    # conform to RFC1035
	listen-on-v6 { any; };
};